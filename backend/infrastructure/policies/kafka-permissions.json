{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "kafka:CreateCluster",
        "kafka:DeleteCluster",
        "kafka:GetBootstrapBrokers",
        "kafka:CreateConfiguration",
        "kafka:DescribeCluster",
        "kafka:DescribeConfiguration",
        "kafka:ListClusters",
        "kafka:ListConfigurations"
      ],
      "Resource": [
        "arn:aws:kafka:us-east-1:886436930781:cluster/*",
        "arn:aws:kafka:us-east-1:886436930781:configuration/*"
      ]
    }
  ]
}