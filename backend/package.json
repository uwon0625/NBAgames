{
  "name": "nba-live-backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "dev": "ts-node-dev -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "serve": "node dist/server.js",
    "setup:kafka": "yarn update:iam && ts-node infrastructure/scripts/setupKafka.ts",
    "setup:local": "docker-compose up -d && yarn wait 10",
    "start:dev": "yarn setup:local && ts-node-dev src/server.ts",
    "clean": "rimraf infrastructure/dist",
    "copy-pkg": "copyfiles package.json infrastructure/dist/",
    "setup:lambda": "cd infrastructure/lambda && yarn install",
    "build:lambda": "yarn clean && tsc -p tsconfig.lambda.json",
    "deploy:lambda": "ts-node infrastructure/scripts/admin/deployLambda.ts",
    "test:lambda": "ts-node infrastructure/scripts/admin/testLambda.ts",
    "verify:eventbridge": "ts-node infrastructure/scripts/verifyEventBridge.ts",
    "setup:eventbridge": "ts-node infrastructure/scripts/setupEventBridge.ts",
    "setup:msk": "ts-node infrastructure/scripts/setupKafka.ts",
    "get:kafka-info": "ts-node infrastructure/scripts/setupKafka.ts info",
    "deploy:cfn": "ts-node infrastructure/scripts/admin/deployTemplates.ts deploy",
    "delete:cfn": "ts-node infrastructure/scripts/admin/deployTemplates.ts delete",
    "setup:iam": "ts-node infrastructure/scripts/admin/setupIAMPermissions.ts",
    "check:stack": "ts-node infrastructure/scripts/admin/deployTemplates.ts status",
    "check:failures": "ts-node infrastructure/scripts/admin/deployTemplates.ts failures"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.726.1",
    "@aws-sdk/client-cloudwatch-logs": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-ec2": "^3.726.1",
    "@aws-sdk/client-elasticache": "^3.726.1",
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "@aws-sdk/client-iam": "^3.0.0",
    "@aws-sdk/client-kafka": "^3.726.1",
    "@aws-sdk/client-kms": "^3.726.1",
    "@aws-sdk/client-lambda": "^3.726.1",
    "@aws-sdk/client-s3": "^3.726.1",
    "@aws-sdk/client-sqs": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@aws-sdk/util-dynamodb": "^3.0.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.6",
    "@types/connect": "^3.4.38",
    "@types/graceful-fs": "^4.1.9",
    "@types/http-errors": "^2.0.4",
    "@types/mime": "^4.0.0",
    "@types/qs": "^6.9.17",
    "@types/range-parser": "^1.2.7",
    "@types/serve-static": "^1.15.7",
    "@types/stack-utils": "^2.0.3",
    "@types/strip-bom": "^4.0.1",
    "@types/strip-json-comments": "^3.0.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "https": "^1.0.0",
    "ioredis": "^5.4.2",
    "kafkajs": "^2.2.4",
    "nodemon": "^3.1.9",
    "redis": "^4.7.0",
    "winston": "^3.11.0",
    "ws": "^8.18.0",
    "zip-a-folder": "^3.1.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/aws-lambda": "^8.10.136",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/mime": "^3.0.4",
    "@types/node": "^22.10.4",
    "@types/ws": "^8.5.13",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
