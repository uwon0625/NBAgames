{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "infrastructure/lambda/dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/lambdas/**/*",
    "src/config/**/*",
    "src/services/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
} 