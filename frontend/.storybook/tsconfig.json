{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "",
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "../src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "../**/*.spec.ts",
    "../**/*.test.ts",
    "../**/*.spec.tsx",
    "../**/*.test.tsx",
    "../node_modules"
  ],
  "include": [
    "../src/**/*.stories.ts",
    "../src/**/*.stories.tsx",
    "*.ts",
    "*.tsx"
  ]
} 